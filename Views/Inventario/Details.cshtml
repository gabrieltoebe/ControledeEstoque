@model Control_Estoque.Models.Inventario

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="title">Detalhes do estoque</h1>

<div>
    <h4 class="subtitle">Inventário número: @Html.DisplayFor(model => model.IdInv)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Código estoque:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEstoque)
        </dd>
       
        
        <dt class = "col-sm-2">
            Data de movimentação:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataMov)
        </dd>
    </dl>
</div>
<a class="btn btn-danger btn_margin_form" asp-action="Index">Voltar</a>
</div>