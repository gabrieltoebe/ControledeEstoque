@model Control_Estoque.Models.Inventario

@{
    ViewData["Title"] = "Programar inventário";
}

<h2 class="title">Programar inventário</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdEstoque" class="control-label">Estoque</label>
                <select asp-for="IdEstoque" class="form-control" asp-items="ViewBag.IdEstoque"></select>
                <span asp-validation-for="IdEstoque" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DataMov" class="control-label">Data Programada</label>
                <input asp-for="DataMov" class="form-control datepicker" />
                <span asp-validation-for="DataMov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn_margin_form"
                    style="margin-top: 20px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger btn_margin_form" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <script>$(document).ready(function () { $(".datepicker").datepicker({ dateFormat: 'dd/mm/yy' }); });</script>
}
