@model Control_Estoque.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<h1 class="title">Cadastro de fornecedor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFornecedor" class="control-label">Nome do Fornecedor</label>
                <input asp-for="NomeFornecedor" class="form-control" />
                <span asp-validation-for="NomeFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoFornecedor" class="control-label">Endereço do Fornecedor</label>
                <input asp-for="EnderecoFornecedor" class="form-control" />
                <span asp-validation-for="EnderecoFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoFornecedor" class="control-label">Estado do Fornecedor</label>
                <input asp-for="EstadoFornecedor" class="form-control" />
                <span asp-validation-for="EstadoFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneFornecedor" class="control-label">Telefone do Fornecedor</label>
                <input asp-for="TelefoneFornecedor" class="form-control" />
                <span asp-validation-for="TelefoneFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn_margin_form" />
            </div>
        </form>
    </div>
</div>

<form asp-area="" asp-controller="Fornecedor" asp-action="Index" method="get" class="form-group">
    <button type="submit" class="btn btn-danger btn_margin_form">Voltar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
