@model Control_Estoque.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir";
}

<h1>EXCLUSÃO</h1>

<h3>Você tem certeza que deseja excluir este produto?</h3>
<br>
<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFornecedor)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFornecedor" />
        <input class="btn btn-danger btn_margin_form" type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-primary btn_margin_form" asp-action="Edit" asp-route-id="@Model?.IdFornecedor">Editar</a>
        <a class="btn btn-secondary btn_margin_form" asp-action="Index">Voltar</a>
    </form>
</div>
