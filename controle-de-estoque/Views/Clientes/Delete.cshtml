@model Control_Estoque.Models.Cliente

@{
    ViewData["Title"] = "Excluir";
}

<h1>EXCLUSÃO</h1>

<h3>Você tem certeza que deseja excluir este produto?</h3>
<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Endereço:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Estado:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoCliente)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Telefone:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneCliente)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <input class="btn btn-danger btn_margin_form" type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-primary btn_margin_form" asp-action="Edit" asp-route-id="@Model?.IdCliente">Editar</a>
        <a class="btn btn-secondary btn_margin_form" asp-action="Index">Voltar</a>
    </form>
</div>
