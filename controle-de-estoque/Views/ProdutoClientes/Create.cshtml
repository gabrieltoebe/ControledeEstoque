@model Control_Estoque.Models.ProdutoCliente

@{
    ViewData["Title"] = "Create";
}

<h1>Nova venda</h1>

<h4>----</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Cliente</label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodProduto" class="control-label">Produto</label>
                <select asp-for="CodProduto" class ="form-control" asp-items="ViewBag.CodProduto"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdEstoque" class="control-label">Estoque</label>
                <select asp-for="IdEstoque" class ="form-control" asp-items="ViewBag.IdEstoque"></select>
                <span asp-validation-for="IdEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label">Quantidade</label>
                <input asp-for="Qtde" class="form-control" />
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn_margin_form" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-danger btn_margin_form" asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
