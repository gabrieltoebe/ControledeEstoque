@model Control_Estoque.Models.ProdutoCliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="title">Nova venda</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Cliente</label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodProduto" class="control-label">Produto</label>
                <select asp-for="CodProduto" class ="form-control" asp-items="ViewBag.CodProduto"></select>
            </div>
            @*<div class="form-group">
                <label asp-for="IdProdFornRec" class="control-label">Fornecedor</label>
                <select asp-for="IdProdFornRec" class="form-control" asp-items="ViewBag.IdProdFornRec"></select>
            </div> *@
            <div class="form-group">
                <label asp-for="IdEstoque" class="control-label">Estoque</label>
                <select asp-for="IdEstoque" class ="form-control" asp-items="ViewBag.IdEstoque"></select>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label">Quantidade</label>
                <input asp-for="Qtde" class="form-control" min=0/>
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn_margin_form" />
            </div>
        </form>
    </div>
</div>

<form asp-area="" asp-controller="ProdutoClientes" asp-action="Index" method="get" class="form-group">
    <button type="submit" class="btn btn-danger btn_margin_form">Voltar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
