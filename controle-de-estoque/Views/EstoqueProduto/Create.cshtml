@model Control_Estoque.Models.EstoqueProduto

@{
    ViewData["Title"] = "Entrada de produtos";
}


<h2 class="title">Entrada de produtos</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstoqueId" class="control-label">Estoque a ser inserido</label>
                <select asp-for="EstoqueId" class ="form-control" asp-items="ViewBag.EstoqueId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodProduto" class="control-label">Produto</label>
                <select asp-for="CodProduto" class="form-control" asp-items="ViewBag.CodProduto" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label">Quantidade</label>
                <input asp-for="Qtde" class="form-control" />
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn_margin_form"
                    style="margin-top: 20px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger btn_margin_form" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
