@model IEnumerable<Control_Estoque.Models.ProdutoFornecedorReceb>

@{
    ViewData["Title"] = "Recebimentos";
}
<h1 class="title" style="text-align: center;">Recebimentos</h1>

<form asp-area="" asp-controller="ProdutoFornecedorRecebs" asp-action="Create" method="get">
    <button type="submit" class="btn btn-primary nav-link text-white" style="margin-bottom: 20px; width:100%;">Novo
        produto</button>
</form>
<table class="table table-sm table-striped table-bordered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Data recebimento
            </th>
            <th> Opções</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.NomeFornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Descrição)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRecebimento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
            <td class="align-center">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CodProduto">Editar</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CodProduto">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CodProduto">Excluir</a>
            </td>
            
        </tr>
}
    </tbody>
</table>
