@model Control_Estoque.Models.Produto

@{
    ViewData["Title"] = "Novo produto";
}

<h1>Cadastro de produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeProduto" class="control-label">Nome</label>
                <input asp-for="NomeProduto" class="form-control" />
                <span asp-validation-for="NomeProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrição" class="control-label">Descrição</label>
                <input asp-for="Descrição" class="form-control" />
                <span asp-validation-for="Descrição" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastroProd" class="control-label">Data de cadastramento</label>
                <input asp-for="DataCadastroProd" class="form-control" />
                <span asp-validation-for="DataCadastroProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<form asp-area="" asp-controller="Produtos" asp-action="Index" method="get" class="form-group">
    <button type="submit" class="btn btn-danger">Voltar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
