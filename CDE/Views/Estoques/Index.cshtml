@model IEnumerable<Control_Estoque.Models.Estoque>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AtivEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AtivEstoque)
            </td>
